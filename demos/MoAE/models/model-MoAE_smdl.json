{
  "Name": "auditory",
  "BIDSModelVersion": "1.0.0",
  "Description": "GLM and contrasts to compute for the FIL MoAE dataset",
  "Input": {
    "task": [
      "auditory"
    ],
    "space": [
      "IXI549Space"
    ]
  },
  "Nodes": [
    {
      "Level": "Run",
      "Name": "run_level",
      "GroupBy": [
        "run",
        "subject"
      ],
      "Model": {
        "X": [
          "condition.listening",
          "trans_?",
          "rot_?"
        ],
        "HRF": {
          "Variables": [
            "condition.listening"
          ],
          "Model": "spm"
        },
        "Type": "glm",
        "Options": {
          "HighPassFilterCutoffHz": 0.0078,
          "Mask": {
            "suffix": [
              "mask"
            ],
            "desc": [
              "brain"
            ]
          }
        },
        "Software": {
          "SPM": {
            "SerialCorrelation": "AR(1)"
          }
        }
      },
      "DummyContrasts": {
        "Test": "t",
        "Contrasts": [
          "condition.listening"
        ]
      },
      "Contrasts": [
        {
          "Name": "listening_inf_baseline",
          "ConditionList": [
            "condition.listening"
          ],
          "Weights": [
            -1
          ],
          "Test": "t"
        }
      ]
    }
  ]
}
